<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/sys_solaire" />
        <ScrollView
            android:id="@+id/bio_scroll"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/layout_margin">
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mercure"
                android:translationY="@dimen/balance_icons_y" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="70dp"
                android:layout_marginTop="50dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/margin_val"
                android:text="Mercure" />
            <TextView
                android:id="@+id/desc"
                android:layout_width="200dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_val"
                android:text="est la planète la plus proche du Soleil, ainsi que la plus petite (4 878
km de diamètre) et la moins massive avec un peu plus du vingtième de la
masse terrestre"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mars"
                android:translationY="@dimen/balance_icons_y" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="70dp"
                android:layout_marginTop="50dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/margin_val"
                android:text="Mars" />
            <TextView
                android:id="@+id/desc8"
                android:layout_width="200dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_val"
                android:text="est deux fois plus petite que la Terre et Vénus, et fait seulement environ
le dixième de la masse terrestre. Sa période de révolution autour du Soleil est
de 687 jours terrestres et sa journée dure 24 heures et 39 minutes." />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/saturne"
                android:translationY="@dimen/balance_icons_y" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="70dp"
                android:layout_marginTop="50dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/margin_val"
                android:text="Saturn" />
            <TextView
                android:id="@+id/desc9"
                android:layout_width="200dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_val"
                android:text="possède des caractéristiques similaires à Jupiter, telles que sa
composition atmosphérique et sa puissante magnétosphère. Bien qu'elle
fasse 60 % du volume de l'autre planète géante gazeuse du fait de son
diamètre équatorial d'environ 121 000 kilomètres, elle est beaucoup moins
massive avec 95 masses terrestres." />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView87"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/juiter"
                android:translationY="@dimen/balance_icons_y" />

            <TextView
                android:id="@+id/textView187"
                android:layout_width="70dp"
                android:layout_marginTop="50dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/margin_val"
                android:text="Jupiter" />
            <TextView
                android:id="@+id/desc87"
                android:layout_width="200dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_val"
                android:text="avec 318 masses terrestres, est aussi massive que 2,5 fois toutes
les autres planètes réunies et son diamètre avoisine les 143 000 kilomètres.
Sa période de révolution est d'environ 12 ans et sa période de rotation est
d'un peu moins de 10 heures." />
        </LinearLayout>
    </LinearLayout>
</layout>